@model SklepSportowy.Models.Zamowienie
@{
    ViewBag.Title = "Zaplac";
}

<h2>Wypełnij pole potrzebne do złożenia zamówienia</h2>
<div>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()

        <table>
            <tr>
                <td>@Html.LabelFor(m=>m.Imie)</td>
                <td>@Html.TextBoxFor(m=>m.Imie)</td>
                
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Nazwisko)</td>
                <td>@Html.TextBoxFor(m => m.Nazwisko)</td>
               
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Adres)</td>
                <td>@Html.TextBoxFor(m => m.Adres)</td>
               
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.KodPocztowy)</td>
                <td>@Html.TextBoxFor(m => m.KodPocztowy)</td>
                
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Miasto)</td>
                <td>@Html.TextBoxFor(m => m.Miasto)</td>
                
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Email)</td>
                <td>@Html.TextBoxFor(m => m.Email)</td>
                
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Telefon)</td>
                <td>@Html.TextBoxFor(m => m.Telefon)</td>
                
            </tr>
            <tr>
                <td><label for="comment">Uwagi</label></td>
                <td><textarea cols="40" rows="3" name="comment">@Model.Uwagi</textarea></td>
            </tr>
        </table>

        <div>
            @Html.ActionLink("Wróć","Index")
            <input type="submit" value="Potwierdź" />
        </div>
    }
</div>


